# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration - Choose one option:

# Option 1: Local PostgreSQL (Default)
NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://ai_lms_user:ai_lms_password@localhost:5432/ai_lms

# Option 2: Docker PostgreSQL (if running via docker-compose)
# NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://ai_lms_user:ai_lms_password@postgres:5432/ai_lms

# Option 3: AWS RDS (for testing against production database)
# NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://ai_lms_admin:password@endpoint.rds.amazonaws.com:5432/ai_lms

# Option 4: Cloud Provider (Neon, Supabase, etc.)
# NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://user:password@host:5432/database?sslmode=require

# JWT Secret for Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-secret-key-change-in-production

# Optional: AI Features (Google Gemini)
# Uncomment and add your API key if you want to use AI features
# NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Background Jobs (Inngest)
# Uncomment if you want to use Inngest for background tasks
# INNGEST_EVENT_KEY=your_inngest_event_key
# INNGEST_SIGNING_KEY=your_inngest_signing_key

# Application URL (for local development)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# Enable debug logging (optional)
DEBUG=true

# Logging Level
LOG_LEVEL=debug
