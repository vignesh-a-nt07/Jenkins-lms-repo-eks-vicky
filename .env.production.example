# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Node Environment
NODE_ENV=production

# Database Configuration - Choose one option below:

# Option 1: AWS RDS PostgreSQL (Recommended for Production)
# Format: postgresql://username:password@rds-endpoint.region.rds.amazonaws.com:5432/database_name
NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://ai_lms_admin:YOUR_STRONG_PASSWORD@ai-lms-db.xxxxx.us-east-1.rds.amazonaws.com:5432/ai_lms

# Option 2: Docker PostgreSQL (Local/Containerized)
# NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://ai_lms_user:ai_lms_password@postgres:5432/ai_lms

# Option 3: Other Cloud Provider (Neon, Supabase, etc.)
# NEXT_PUBLIC_DATABASE_CONNECTION_STRING=postgresql://username:password@host:5432/database?sslmode=require

# JWT Secret for Authentication
# CRITICAL: Generate a strong, unique secret key!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION

# Optional: AI Features (if enabled)
# NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Background Jobs (if enabled)
# INNGEST_EVENT_KEY=your_inngest_event_key
# INNGEST_SIGNING_KEY=your_inngest_signing_key

# Application URL (for production)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Security Headers
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Logging
LOG_LEVEL=info
